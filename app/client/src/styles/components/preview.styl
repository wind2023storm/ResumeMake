@import '../variables/colors'

#preview
  .row
    justify-content center
    text-align center
    margin-left 0
    margin-top 0
    width 100%

  canvas
    max-width 1000px
    width 100%
    height 100%

  .download-buttons
    display flex
    justify-content space-between

    .button
      width 49%
      color $home-text-color
      background-color oc-gray-9
      margin-bottom 5px
      outline none
      border none
      border-radius 0
      transition all .4s ease

      &:hover
        cursor pointer
        background-color $download-button-background-color
        color #000
