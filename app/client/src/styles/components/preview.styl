@import '../variables/colors'

#preview
  .row
    justify-content center
    text-align center
    margin-left 0
    margin-top 0
    width 100%

  canvas
    max-width 1000px
    width 100%
    height 100%

  .download-buttons
    display flex
    justify-content space-between

    a.button
      width 48%
      color $home-text-color
      background-color transparent
      outline none
      border-left none
      border-right none
      border-bottom none
      border-radius 0
      transition all .4s ease

      &:hover
        cursor pointer
        background-color $home-button-color
        color #000
