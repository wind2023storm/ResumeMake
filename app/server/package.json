{
  "name": "saadq-server-boilerplate",
  "description": "Server-side boilerplate for Koa 2",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/saadq/saadq-client-boilerplate"
  },
  "homepage": "https://github.com/saadq/saadq-client-boilerplate",
  "scripts": {
    "start": "nodemon src/index.js --exec babel-node",
    "lint": "blyss | snazzy",
    "fix": "blyss --fix",
    "format": "prettier --single-quote --no-semi --write \"src/**/*.js\"",
    "test": "npm run lint --silent && ava src/tests/**/*.js --fail-fast --verbose",
    "debug": "inspect node_modules/ava/profile.js src/tests/sanitizer.js",
    "flow": "flow",
    "install:types": "flow-typed install"
  },
  "dependencies": {
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-combine-routers": "^1.0.0",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "blyss": "^8.0.2",
    "flow-bin": "^0.57.3",
    "flow-typed": "^2.2.0",
    "nodemon": "^1.12.1"
  },
  "blyss": {
    "ignore": [
      "flow-typed/**/*.js"
    ]
  }
}
